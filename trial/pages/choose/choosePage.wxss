/* pages/choose/choosePage.wxss */
page {height: 100%;background: #f5f4f9}
.choose-reason-top {margin-top: 20px;}
.online-chat-body-other-chat-img {float: left;width: 40px;height: 40px;margin-left: 10px;}
.online-chat-body-other-chat-img image {width: 100%;height: 100%;}
.online-chat-body-other-chat-name {color: rgb(107, 109, 110);float: left;width: calc(100% - 70px);margin-left: 15px;height: 20px;font-size: 12px}
.online-chat-body-other-chat-content {word-break: break-all;position: relative;border: 1px solid #e3e3e3;max-width: calc(100% - 122px);float: left;padding: 12px 10px;color: #373737;background: #fff;border-radius: 5px;margin-left: 15px;font-size: 15px;}
.online-chat-body-other-chat-content-arrow {position: absolute;width: 10px;height: 11px;background-size: 11px 10px;left: -8px;top: 10px;}
.online-chat-body-other-chat-content-arrow image {width: 10px;height: 11px;}
.clear-both {clear: both;display: block;}
.use-reason {margin-top: 20px;padding: 10px 10px;background:#fff;
}
.online-chat-body-other-chat-content .text-consultant-name{line-height: 20px;}
.use-reason .use-reason-title {font-size: 15px;}
.use-reason .use-reason-title em {color: red;}
.use-reason .radio-group label {display: block;margin-top: 10px;font-size: 12px;}
.submit {width: calc(100% - 20px);margin-left: 10px;margin-top: 30px; position: relative;padding-bottom: 20px;}