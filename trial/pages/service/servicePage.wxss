/* pages/service/servicePage.wxss */
.title-tab {border-bottom: 1px solid #e3e3e3;background: #fff;margin-top: 10px;}
.title-tab-li {float: left;width: 33%;line-height: 35px;font-size: 12px;text-align: center;color: #6b6d6e;}
.title-tab-li.select {border-bottom: 2px solid #FFB359;color: #FFB359;}
.service-body {background: #fff;margin-top: 10px;}
.service-body-title {width: 96%;margin-left: 2%;padding-top: 15px;font-size: 15px;text-align: center;position: relative;}
.service-body-title .title-logo {text-align: center;border-radius: 2px;display: inline-block;width: 20px;height: 20px;color: #Fff;line-height: 20px;background: #03aaee;font-size: 18px;}
.service-body-title .title-text {display: inline-block;font-size: 15px;color: #585858;width: 95px;text-align: left;line-height: 20px;height: 20px;padding-left: 5px; }
.service-body-text {width: 94%;margin-left: 3%;color: #797979;font-size: 12px;margin-top: 15px;line-height: 17px;}
.service-body-bottom {display: inline-block;background-size: 15px 15px;font-size: 12px;color: #AAA;margin-bottom: 15px;line-height: 15px;margin-top: 10px;padding-left: 10px;}
.service-body-bottom .bottom-logo {display: inline-block;border-radius:3px;color: #fff;padding: 1px;}
.service-body-bottom .bottom-text {display: inline-block;padding-left: 5px;}
.service {margin-bottom: 10px;}
.service-body-bottom .bottom-text span {color: #ff9041;}
.service-img image {height: 1443px;width: 320px;}
.service-img {margin-top: 10px;}



