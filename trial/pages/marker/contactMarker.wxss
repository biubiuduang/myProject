/* pages/marker/contactMarker.wxss */
.marker {margin-top: 3px;} 
.marker-image {text-align: center;padding-top: 20px;}
.marker-image image {width: 100px;height: 100px;}
.marker-name {text-align: center;}
.marker-content {background: #fff;width: calc(100% - 60px);margin-left: 30px;padding: 10px 0px;margin-top: 20px;text-align: center;line-height: 23px;border-radius: 5px;font-size: 15px;}
.marker-contact {font-size: 12px;color: #6b6d6e;text-align: left;padding: 10px;}
.button {margin-top: 30px;width: calc(100% - 40px);margin-left: 20px;font-size: 15px;background: #03aaee;height: 35px;text-align: center;line-height: 35px;color: #fff;border-radius: 5px;}




